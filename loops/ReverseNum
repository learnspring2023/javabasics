

public interface ReverseNum {

	public static void main(String[] args) {
		int num=1234;
		int reverse=0;
		while(num!=0) {
			reverse=reverse*10+num%10;  //432*10 + 1%10 --> 4321
			num=num/10; //1/10--> 0
			System.out.println("reverse:"+reverse);
			System.out.println("num:"+num);
		}
		System.out.println(reverse);
	}
}
